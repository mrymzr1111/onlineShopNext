{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,           // <-- change from true
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "paths": { "@/*": ["./src/*"] }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/app/admin/addmerch/merch.ts",
    "src/app/admin/addmerch/page.tsx",
    "src/components/dash.tsx",
    "src/components/merchForm.tsx",
    "src/lib/getAuthUser.ts",
    "testConnection.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
